<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recommendation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.micha.srafarmer.Recommendations.RecommendationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/recommendation_fieldID"
        android:text="Field ID: 1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/recommmendation_location"
        android:text="Barangay, Municipality"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:id="@+id/recommendation_name"
                android:text="Recommendation: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:id="@+id/recommendation_type"
            android:text="Type: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:id="@+id/recommendation_description"
            android:text="Description: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:id="@+id/recommendation_status"
            android:text="Status: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:id="@+id/recommendation_duration"
            android:text="Duration: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:id="@+id/recommendation_phase"
            android:text="Phase: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:id="@+id/recommendation_date"
            android:text="Date: "/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Go to Post"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:id="@+id/recommendation_gotopost"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Finish"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:id="@+id/recommendation_finish"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/recommendation_buttons"
            android:visibility="gone"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:layout_weight=".5"
                android:id="@+id/recommendation_reject"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:id="@+id/recommendation_accept"
                android:layout_weight=".5"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
</RelativeLayout>
